<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <ImageView
        android:id="@+id/jobtypepic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/job_icon2" />

    <TextView
        android:id="@+id/jobtypetext"
        android:layout_toEndOf="@+id/jobtypepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="Job"
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/ratingpic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/jobtypetext"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

    <TextView
        android:id="@+id/ratingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobtypetext"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/ratingpic"
        android:gravity="center"
        android:text="Date"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/pricepic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ratingtext"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@android:drawable/sym_action_email" />

    <TextView
        android:id="@+id/pricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingtext"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/pricepic"
        android:gravity="center"
        android:text="Decription"
        android:textSize="16sp" />




    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>


</RelativeLayout>
