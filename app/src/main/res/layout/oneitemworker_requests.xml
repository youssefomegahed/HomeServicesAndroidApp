<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="130dp">


    <TextView
        android:id="@+id/customerName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp" />

<ImageView
    android:id="@+id/ratingpic"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_below="@+id/customerName"
    android:layout_marginStart="20dp"
    android:layout_marginTop="7dp"
    app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/ratingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/ratingpic"
        android:gravity="center"
        android:text="Rating"
        android:textSize="16sp" />

<ImageView
    android:id="@+id/datepic"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_below="@+id/ratingtext"
    android:layout_marginStart="20dp"
    android:layout_marginTop="7dp"
    app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

    <TextView
        android:id="@+id/datetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingtext"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/datepic"
        android:gravity="center"
        android:text="Date"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/descriptionpic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/datetext"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <TextView
        android:id="@+id/descriptiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetext"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/datepic"
        android:gravity="center"
        android:text="Description"
        android:textSize="16sp" />




<TextView
    android:id="@+id/border2"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_alignParentBottom="true"
    android:background="#808080"/>

    <Button
        android:id="@+id/detailsbtn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:text="Details" />
<Button
    android:id="@+id/dismissbtn"
    android:layout_width="110dp"
    android:layout_height="40dp"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/detailsbtn"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="40dp"
    android:text="Dismiss" />


</RelativeLayout>
